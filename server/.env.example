NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/hotel-booking-system

# JWT Secrets
JWT_ACCESS_SECRET=your_access_token_secret_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Key (32 bytes for AES-256)
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_in_production

# CSRF Secret
CSRF_SECRET=your_csrf_secret_change_this_in_production

# Email Configuration (Optional - for real email sending)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your_email@ethereal.email
EMAIL_PASS=your_email_password

# Security
PASSWORD_EXPIRY_DAYS=90
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
