NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/hotel-booking-system

# JWT Secrets
JWT_ACCESS_SECRET=dev_access_secret_change_in_production_use_long_random_string
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production_use_long_random_string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

